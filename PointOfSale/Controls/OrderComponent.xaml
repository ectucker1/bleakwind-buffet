             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.Controls"
             xmlns:menu="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:MenuSelectionComponent  Grid.Column="0"></local:MenuSelectionComponent>
        <local:ItemCustomizationComponent Grid.Column="1"></local:ItemCustomizationComponent>
        <local:OrderPreviewComponent Grid.Column="2"></local:OrderPreviewComponent>
    </Grid>
</UserControl>
