            <local:MenuItemButtonComponent ItemName="Thugs T-Bone"></local:MenuItemButtonComponent>
        </WrapPanel>
        <TextBlock>Sides</TextBlock>
        <WrapPanel>
            <local:MenuItemButtonComponent ItemName="Vokun Salad"></local:MenuItemButtonComponent>
            <local:MenuItemButtonComponent ItemName="Fried Miraak"></local:MenuItemButtonComponent>
            <local:MenuItemButtonComponent ItemName="Mad Otar Grits"></local:MenuItemButtonComponent>
            <local:MenuItemButtonComponent ItemName="Dragonborn Waffle Fries"></local:MenuItemButtonComponent>
        </WrapPanel>
        <TextBlock>Drinks</TextBlock>
        <WrapPanel>
            <local:MenuItemButtonComponent ItemName="Aretino Apple Juice"></local:MenuItemButtonComponent>
            <local:MenuItemButtonComponent ItemName="Candlehearth Coffee"></local:MenuItemButtonComponent>
            <local:MenuItemButtonComponent ItemName="Markarth Milk"></local:MenuItemButtonComponent>
