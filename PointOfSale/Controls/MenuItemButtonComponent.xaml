<Button x:Class="BleakwindBuffet.PointOfSale.Controls.MenuItemButtonComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80"
             HorizontalContentAlignment="Left"
             VerticalContentAlignment="Bottom">
    <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding ItemName, RelativeSource={RelativeSource AncestorType=Button}}"/>
</Button>
