<!--
    Author: Ethan Tucker
    Class: BriarheartBurgerCustomization.xaml
    Purpose: Define the customization options for the Briarheart Burger
-->
<UserControl x:Class="BleakwindBuffet.PointOfSale.Controls.MenuItems.Entrees.BriarheartBurgerCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Entrees"
             xmlns:fields="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Fields"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock TextAlignment="Center" Margin="4" FontSize="16">Customize Briarheart Burger</TextBlock>
        <fields:BooleanField FieldName="Bun" FieldValue="True"></fields:BooleanField>
        <fields:BooleanField FieldName="Ketchup" FieldValue="True"></fields:BooleanField>
        <fields:BooleanField FieldName="Mustard" FieldValue="True"></fields:BooleanField>
        <fields:BooleanField FieldName="Pickle" FieldValue="True"></fields:BooleanField>
        <fields:BooleanField FieldName="Cheese" FieldValue="True"></fields:BooleanField>
    </StackPanel>
</UserControl>
