<UserControl x:Class="BleakwindBuffet.PointOfSale.Controls.MenuItems.Entrees.GardenOrcOmeletteCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Entrees"
             xmlns:fields="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Fields"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock TextAlignment="Center" Margin="4" FontSize="16">Customize Garden Orc Omelette</TextBlock>
        <fields:BooleanField FieldName="Broccoli" FieldValue="True"></fields:BooleanField>
        <fields:BooleanField FieldName="Mushrooms" FieldValue="True"></fields:BooleanField>
        <fields:BooleanField FieldName="Tomato" FieldValue="True"></fields:BooleanField>
        <fields:BooleanField FieldName="Cheddar" FieldValue="True"></fields:BooleanField>
    </StackPanel>
</UserControl>
