<!--
    Author: Ethan Tucker
    Class: PhillyPoacherCustomization.xaml
    Purpose: Define the customization options for the Philly Poacher
-->
<UserControl x:Class="BleakwindBuffet.PointOfSale.Controls.MenuItems.Entrees.PhillyPoacherCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Entrees"
             xmlns:fields="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Fields"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock TextAlignment="Center" Margin="4" FontSize="16">Customize Philly Poacher</TextBlock>
        <fields:BooleanField FieldName="Sirloin" FieldValue="{Binding Sirloin}"></fields:BooleanField>
        <fields:BooleanField FieldName="Onion" FieldValue="{Binding Onion}"></fields:BooleanField>
        <fields:BooleanField FieldName="Roll" FieldValue="{Binding Roll}"></fields:BooleanField>
    </StackPanel>
</UserControl>
