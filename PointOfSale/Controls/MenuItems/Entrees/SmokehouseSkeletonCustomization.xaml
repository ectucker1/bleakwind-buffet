<!--
    Author: Ethan Tucker
    Class: SmokehouseSkeletonCustomization.xaml
    Purpose: Define the customization options for the Smokehouse Skeleton
-->
<UserControl x:Class="BleakwindBuffet.PointOfSale.Controls.MenuItems.Entrees.SmokehouseSkeletonCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Entrees"
             xmlns:fields="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Fields"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock TextAlignment="Center" Margin="4" FontSize="16">Customize Smokehouse Skeleton</TextBlock>
        <fields:BooleanField FieldName="Sausage Link" FieldValue="{Binding SausageLink}"></fields:BooleanField>
        <fields:BooleanField FieldName="Egg" FieldValue="{Binding Egg}"></fields:BooleanField>
        <fields:BooleanField FieldName="Hash Browns" FieldValue="{Binding HashBrowns}"></fields:BooleanField>
        <fields:BooleanField FieldName="Pancake" FieldValue="{Binding Pancake}"></fields:BooleanField>
    </StackPanel>
</UserControl>
