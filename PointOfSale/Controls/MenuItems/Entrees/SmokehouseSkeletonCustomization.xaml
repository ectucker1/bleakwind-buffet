<UserControl x:Class="BleakwindBuffet.PointOfSale.Controls.MenuItems.Entrees.SmokehouseSkeletonCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Entrees"
             xmlns:fields="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Fields"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock TextAlignment="Center">Customize Smokehouse Skeleton</TextBlock>
        <fields:BooleanField FieldName="Sausage Link" FieldValue="True"></fields:BooleanField>
        <fields:BooleanField FieldName="Egg" FieldValue="True"></fields:BooleanField>
        <fields:BooleanField FieldName="Hash Browns" FieldValue="True"></fields:BooleanField>
        <fields:BooleanField FieldName="Pancake" FieldValue="True"></fields:BooleanField>
    </StackPanel>
</UserControl>
