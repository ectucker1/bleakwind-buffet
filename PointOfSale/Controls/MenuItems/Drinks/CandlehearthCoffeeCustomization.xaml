<!--
    Author: Ethan Tucker
    Class: CandlehearthCoffeeCustomization.xaml
    Purpose: Define the customization options for the Candlehearth Coffee
-->
<UserControl x:Class="BleakwindBuffet.PointOfSale.Controls.MenuItems.Drinks.CandlehearthCoffeeCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Drinks"
             xmlns:fields="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Fields"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock TextAlignment="Center" Margin="4" FontSize="16">Customize Candlehearth Coffee</TextBlock>
        <fields:SizeField FieldName="Size" FieldValue="{Binding Path=Size}"></fields:SizeField>
        <fields:BooleanField FieldName="Ice" FieldValue="{Binding Path=Ice}"></fields:BooleanField>
        <fields:BooleanField FieldName="Room for Cream" FieldValue="{Binding Path=RoomForCream}"></fields:BooleanField>
        <fields:BooleanField FieldName="Decaf" FieldValue="{Binding Path=Decaf}"></fields:BooleanField>
    </StackPanel>
</UserControl>
