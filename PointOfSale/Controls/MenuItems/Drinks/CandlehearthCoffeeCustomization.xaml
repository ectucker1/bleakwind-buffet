<UserControl x:Class="BleakwindBuffet.PointOfSale.Controls.MenuItems.Drinks.CandlehearthCoffeeCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Drinks"
             xmlns:fields="clr-namespace:BleakwindBuffet.PointOfSale.Controls.MenuItems.Fields"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock TextAlignment="Center">Customize Candlehearth Coffee</TextBlock>
        <fields:SizeField></fields:SizeField>
        <fields:BooleanField FieldName="Ice" FieldValue="False"></fields:BooleanField>
        <fields:BooleanField FieldName="Room for Cream" FieldValue="False"></fields:BooleanField>
        <fields:BooleanField FieldName="Decaf" FieldValue="False"></fields:BooleanField>
    </StackPanel>
</UserControl>
